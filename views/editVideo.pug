extends layouts/main 

block content 
  .form-container
    form(action=routes.editVideo(video.id), method="post")
      input(type="text", name="title", id="title" value=video.title, placeholder="Title")
      textarea(name="description", id="description" placeholder="Description")=video.description
      input(type="submit", value="Update Video")
    a.form-container__link(href=routes.deleteVideo(video.id))
      button.delete Delete Video